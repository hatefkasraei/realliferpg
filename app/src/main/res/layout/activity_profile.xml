<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_background" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu"
                android:src="@drawable/add_user" />

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/drop_down" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Username"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_class_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="class level"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/daily_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Today's quest: Walk 10 miles"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_attribute_health"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="health"
                    android:layout_weight="1"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/healthPBar"
                    android:layout_weight="6"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_attribute_stamina"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="stamina"
                    android:layout_weight="1"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/staminaPBar"
                    android:layout_weight="6"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_attribute_intelligence"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="intelligence"
                    android:layout_weight="1"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/intelligencePBar"
                    android:layout_weight="6"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_attribute_strength"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="strength"
                    android:layout_weight="1"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/strengthPBar"
                    android:layout_weight="6"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_attribute_agility"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="agility"
                    android:layout_weight="1"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/agilityPBar"
                    android:layout_weight="6"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
            </LinearLayout>


            <TextView
                android:id="@+id/user_attribute_luck"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="luck" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>